#!/usr/bin/ruby
require 'bini/app'
require 'bini/optparser'

include Bini

App.banner = "Usage: Use ruby to cat a file and produce colored output."
App.version = "0.9.1"

Options.parse!

require 'coderay'

if ARGV.empty?
  puts 'you need to supply a list of filenames to cat to screen.'
else
  ARGV.each do |f|
    if File.exist? f
      puts CodeRay.scan_file(f).terminal
    else
      puts "No such file: #{f}"
    end
  end
end

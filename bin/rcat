#!/usr/bin/ruby
$:.push '/home/ebrodeur/Projects/bin_snippets/lib'
require 'app'
require 'cli'
include ErnieBrodeur

App.banner = "Usage: Use ruby to cat a file and produce colored output."
App.version = "0.9.0"

Options.parse!

require 'coderay'
if __FILE__ == $0
  if ARGV.empty?
    puts 'you need to supply a list of filenames to cat to screen.'
  else
    ARGV.each do |f|
      if File.exist? f
        puts CodeRay.scan_file(f).terminal
      else
        puts "No such file: #{f}"
      end
    end
  end
end

#!/usr/bin/ruby
$:.push '/home/ebrodeur/Projects/bin_snippets/lib'
Banner = "Usage: Use ruby to cat a file and produce colored output."
Version = "0.9.0"


require 'cli'
Options.parse!
require 'coderay'

if __FILE__ == $0
	if ARGV.empty?
		puts 'you need to supply a list of filenames to cat to screen.'
	else
		ARGV.each do |f|
			if File.exist? f
				puts CodeRay.scan_file(f).terminal
			else
				puts "No such file: #{f}"
			end
		end
	end
end
